{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "my-project"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "assets/assets/global/plugins/font-awesome/css/font-awesome.min.css",
        "assets/assets/global/plugins/simple-line-icons/simple-line-icons.min.css",
        "assets/assets/global/plugins/bootstrap/css/bootstrap.min.css",
        "assets/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css",
        "assets/assets/global/plugins/select2/css/select2.min.css",
        "assets/assets/global/plugins/select2/css/select2-bootstrap.min.css",
        "assets/assets/global/plugins/morris/morris.css", 
        "assets/assets/global/css/components-rounded.min.css",
        "assets/assets/global/css/plugins.min.css",
        "assets/assets/pages/css/login.min.css",
        "assets/assets/layouts/layout5/css/custom.min.css",
        "assets/assets/layouts/layout5/css/layout.min.css",
        "styles.css"
      ],
      "scripts": [
        "assets/assets/global/plugins/jquery.min.js",
        "assets/assets/global/plugins/bootstrap/js/bootstrap.min.js",
        "assets/assets/global/plugins/js.cookie.min.js",
        "assets/assets/global/plugins/jquery-slimscroll/jquery.slimscroll.min.js",
        "assets/assets/global/plugins/jquery.blockui.min.js",
        "assets/assets/global/plugins/bootstrap-switch/js/bootstrap-switch.min.js",
        "assets/assets/global/plugins/moment.min.js",
        "assets/assets/global/plugins/morris/morris.min.js",
        "assets/assets/global/plugins/jquery-validation/js/jquery.validate.min.js",
        "assets/assets/global/plugins/jquery-validation/js/additional-methods.min.js",
        "assets/assets/global/plugins/select2/js/select2.full.min.js",
        "assets/assets/global/plugins/backstretch/jquery.backstretch.min.js",
        "assets/assets/global/scripts/app.min.js",
        "assets/assets/pages/scripts/login.min.js",
        "assets/assets/layouts/layout5/scripts/layout.min.js",
        "assets/assets/layouts/global/scripts/quick-sidebar.min.js",
        "assets/assets/layouts/global/scripts/quick-nav.min.js"

      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
